<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_anim"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gigantic_margin_padding" />

    <ScrollView
        android:id="@+id/result_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/medium_margin_padding"
        android:layout_marginTop="@dimen/medium_margin_padding"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPaddingLeft="@dimen/standard_margin_padding"
            app:cardElevation="0dp"
            app:contentPaddingRight="@dimen/standard_margin_padding"
            app:strokeColor="?attr/boxStrokeColor"
            app:strokeWidth="2dp">

            <LinearLayout
                android:id="@+id/result_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical" />
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <TextView
        android:id="@+id/errorMessage"
        style="@style/basic_text_view"
        android:layout_marginBottom="@dimen/gigantic_margin_padding"
        android:visibility="gone" />

</LinearLayout>
