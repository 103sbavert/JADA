<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin_padding"
        android:textAlignment="center"
        android:text="@string/welcome_title"
        android:textAppearance="?attr/textAppearanceHeadline7" />

    <TextView
        android:id="@+id/welcome_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin_padding"
        android:layout_marginBottom="@dimen/medium_margin_padding"
        android:text="@string/welcome_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody1" />

    <Button
        android:id="@+id/change_language_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_language" />

</LinearLayout>
