    <!--Toolbar-->
    <style name="custom_toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/secondary_elements_color</item>
        <item name="titleTextColor">?attr/colorControlNormal</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!--Text Appearance Styles-->
    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">102sp</item>
        <item name="android:lineSpacingExtra">@dimen/standard_line_spacing</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="Headline2" parent="Headline1">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="Headline3" parent="Headline2">
        <item name="android:textSize">51sp</item>
    </style>

    <style name="Headline4" parent="Headline3">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Headline5" parent="Headline4">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Headline6" parent="Headline5">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Subtitle1" parent="Headline6">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">17.5sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/standard_line_spacing</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="Subtitle2" parent="Subtitle1">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">@dimen/standard_line_spacing</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="Body2" parent="Body1">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">@dimen/standard_line_spacing</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="textAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">@dimen/standard_line_spacing</item>
        <item name="android:elegantTextHeight">true</item>
    </style>
</resources>
