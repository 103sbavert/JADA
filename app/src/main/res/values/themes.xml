<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">@color/orange_dark_translucent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnPrimaryVariant">@color/translucent_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_dark</item>
        <item name="colorSecondaryVariant">@color/cyan_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Others -->
        <item name="suppressed_text">@color/gray</item>
        <item name="colorOnPrimarySurfaceVariant">?attr/colorOnPrimaryVariant</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="colorPrimaryBackground">?attr/colorPrimary</item>
        <item name="colorOnBackground">@color/gray_dark</item>
        <item name="rippleColor">@color/gray_light</item>
    </style>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- System UI Elements. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">?attr/isLightTheme</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <!-- Other UI Elements and Text Appearance -->
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="textAppearanceHeadline1">@style/Headline1</item>
        <item name="textAppearanceHeadline2">@style/Headline2</item>
        <item name="textAppearanceHeadline3">@style/Headline3</item>
        <item name="textAppearanceHeadline4">@style/Headline4</item>
        <item name="textAppearanceHeadline5">@style/Headline5</item>
        <item name="textAppearanceHeadline6">@style/Headline6</item>
        <item name="textAppearanceHeadline7">@style/Headline7</item>
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Subtitle2</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="textAppearanceCaption">@style/Caption</item>
        <item name="textAppearanceButton">@style/textAppearanceButton</item>
        <item name="materialAlertDialogTheme">@style/custom_alert_dialog</item>
        <item name="toolbarStyle">@style/custom_toolbar</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <attr name="colorOnPrimaryVariant" format="color|reference" />
    <attr name="suppressed_text" format="color|reference" />
    <attr name="colorPrimaryBackground" format="color|reference" />
    <attr name="colorOnSurfaceVariant" format="color|reference" />
    <attr name="colorOnPrimarySurfaceVariant" format="color|reference" />
    <attr name="textAppearanceHeadline7" format="reference" />
</resources>

