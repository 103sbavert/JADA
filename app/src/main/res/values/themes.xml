<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="app_theme" parent="base_app_theme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/orange_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="base_app_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--System UI Elements. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">?attr/isLightTheme</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?android:attr/background</item>
        <!--Other UI Elements and Text Appearance-->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="actionBarSize">60dp</item>
        <item name="textAppearanceHeadline1">@style/Headline1</item>
        <item name="textAppearanceHeadline2">@style/Headline2</item>
        <item name="textAppearanceHeadline3">@style/Headline3</item>
        <item name="textAppearanceHeadline4">@style/Headline4</item>
        <item name="textAppearanceHeadline5">@style/Headline5</item>
        <item name="textAppearanceHeadline6">@style/Headline6</item>
        <item name="textAppearanceHeadline7">@style/Headline7</item>
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Subtitle2</item>
        <item name="textAppearanceBody1">@style/Body1</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="textAppearanceCaption">@style/Caption</item>
        <item name="textAppearanceButton">@style/textAppearanceButton</item>
        <item name="materialAlertDialogTheme">@style/custom_alert_dialog</item>
        <item name="materialButtonOutlinedStyle">@style/custom_button_outlined</item>
        <item name="toolbarStyle">@style/custom_toolbar</item>
    </style>
</resources>

