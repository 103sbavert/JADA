        <item name="colorOnSecondary">@color/gray_darker</item>
        <!-- Others -->
        <item name="examples_text_color">@color/gray_light</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/orange_light</item>
