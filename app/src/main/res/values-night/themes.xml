<resources>
    <style name="AppTheme" parent="BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_light</item>
        <item name="colorPrimaryVariant">@color/orange_light_translucent</item>
        <item name="colorOnPrimary">@color/gray_dark</item>
        <item name="colorOnPrimaryVariant">@color/gray_darker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_light</item>
        <item name="colorSecondaryVariant">@color/cyan_light</item>
        <item name="colorOnSecondary">@color/gray_darker</item>
        <!-- Others -->
        <item name="suppressed_text">@color/gray_light</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/orange_light</item>
        <item name="colorOnSurfaceVariant">@color/orange_light_translucent</item>
        <item name="colorOnPrimarySurfaceVariant">?attr/colorOnSurfaceVariant</item>
        <item name="backgroundColor">@color/gray_darker</item>
        <item name="colorPrimaryBackground">?attr/backgroundColor</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="rippleColor">@color/gray</item>
    </style>
</resources>
